<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wykon.recipefinder" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.wykon.recipefinder.activity.RecipeListActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:icon="@drawable/app_icon"
            android:label="Recepten" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wykon.recipefinder.activity.RecipeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:icon="@drawable/app_icon"
            android:label="Recept" >
        </activity>
        <activity
            android:name="com.wykon.recipefinder.activity.FavoriteListActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:icon="@drawable/app_icon"
            android:label="Favorieten" >
        </activity>
        <activity
            android:name="com.wykon.recipefinder.activity.HiddenRecipeList"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:icon="@drawable/app_icon"
            android:label="Verborgen" >
        </activity>
        <activity
            android:name="com.wykon.recipefinder.activity.SearchActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:icon="@drawable/app_icon"
            android:label="Zoeken" >
        </activity>
        <activity
            android:name="com.wykon.recipefinder.activity.ResultListActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:icon="@drawable/app_icon"
            android:label="Resultaten" >
        </activity>
        <activity
            android:name="com.wykon.recipefinder.activity.RandomActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:icon="@drawable/app_icon"
            android:label="Willekeurig" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

</manifest>
